<style>


.indexrighttext{
  text-align: center;
  
  
  transform: translateY(10px);
  background-color: 	#e8dcaf;
  border-width: 1.5px;
  
  width: 30%;
  margin-right: auto;
  margin-left: 0;
  border-radius: 4px;
  padding: 1%;
  animation: wiggle 2.5s infinite ease-in-out;
}
@keyframes welcomepulse {
  0% {
    box-shadow: 10px 0px 15px rgba(255, 255, 255, 0.6); /* Right */
  }
  25% {
    box-shadow: 0px 10px 15px rgba(255, 255, 255, 0.6); /* Bottom */
  }
  50% {
    box-shadow: -10px 0px 15px rgba(255, 255, 255, 0.6); /* Left */
  }
  75% {
    box-shadow: 0px -10px 15px rgba(255, 255, 255, 0.6); /* Top */
  }
  100% {
    box-shadow: 10px 0px 15px rgba(255, 255, 255, 0.6); /* Back to Right */
  }
}
@keyframes wiggle {
  0% { transform: rotate(0deg); }
  
  100% { transform: rotate(0deg); }

}

.BACKGROUNDTEXT{
  

  position: absolute;
  color: transparent;
  color: rgb(0, 0, 0);
  z-index: -1;
  font-size: 300%;
  padding-left: 60%;
  transform: translateY(-250px);
  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
}
.BACKGROUNDTEXTABT{
  

  position: absolute;
  color: transparent;
  color: rgb(0, 0, 0);
  z-index: -1;
  font-size: 100%;

  font-family: "Lexend Deca", sans-serif;
  font-optical-sizing: auto;
  font-weight: 780;
  font-style: normal;
}
.LINKBOX {
  font-family: "Lexend Deca", serif;
  font-optical-sizing: auto;
  font-weight: 350;
  display: inline-block;
  padding: 10px 20px;
  font-size: 16px;
  text-align: center;
  text-decoration: none;
  border-style: solid;
  color:rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.034); /* Button background color */
  border-color: #000000;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.5s ease, border-style 0.3s ease-in; /* Smooth transition for hover effect */
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.26); /* Subtle shadow */
}

/* Glow effect on hover */
.LINKBOX:hover {
 

  border-style: dotted;
  box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.377); /* Subtle shadow */
  font-weight: 350;

  background-color: rgba(135, 151, 153, 0);
  transform: scale(1.05); /* Slight zoom-in effect */

  
}
@keyframes welcomepulse {
  0% {
    
    box-shadow:inset 10px 0px 15px rgba(82, 82, 82, 0.6); /* Right */
  }
  25% {
    box-shadow:inset 0px 10px 15px rgba(82, 82, 82, 0.6); /* Bottom */
  }
  50% {
    box-shadow:inset -10px 0px 15px rgba(82, 82, 82, 0.6); /* Left */
  }
  75% {
    box-shadow:inset 0px -10px 15px rgba(82, 82, 82, 0.6); /* Top */
  }
  100% {
    box-shadow:inset 10px 0px 15px rgba(82, 82, 82, 0.6); /* Back to Right */
  }}
  .s4 img {
    margin-left: 10%;
    
    
    transition: box-shadow 0.3s ease, border-radius 0.3s ease;
    width: 550px; /* Adjust the image width as needed */
    height: auto; /* Maintain the aspect ratio of the image */
}
.s4 img:hover {
  box-shadow:  10px 10px 0px rgba(135, 151, 153, 0.993);
  
  border-radius: 10px; /* Optional: rounded corners for the image */
}
@media (max-width: 480px) {
  .project {
    flex-direction: column;
    align-items: left;
    text-align: left;
  }
  .img{
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.26); /* Subtle shadow */
    margin-top: 10%;
    margin-bottom: 10%;
    border-style:solid;
    border-width: 2.5px;
    border-radius: 10px;
    border-color: #d6d6d6;
    width: 100%; /* Adjusts image width to fit the container */
    max-width: 300px; /* Limits image size on smaller screens */
    height: auto; /* Maintains aspect ratio */
    transform: translateX(-10%);
   
   
  }
}
  @media (max-width: 480px) {
  .fancy {
    font-size: 2.2rem;
  }
  }
</style>